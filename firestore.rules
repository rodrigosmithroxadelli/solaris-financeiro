rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get the current user's UID
    function getUid() {
      return request.auth.uid;
    }

    // Helper function to get the current user's tenantId from their profile document
    // This assumes the user's profile document in the 'users' collection contains a 'tenantId' field
    function getTenantId() {
      // Ensure the user document exists and has a tenantId field
      return get(/databases/$(database)/documents/users/$(getUid())).data.tenantId;
    }

    // Helper function to check if the user is an admin for their tenant
    // Assumes the user's profile document in the 'users' collection contains a 'role' field
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(getUid())).data.role == 'admin';
    }

    // --- Regras por coleção ---
    match /users/{userId} {
      allow read: if isAuthenticated() && (getUid() == userId || (isAdmin() && resource.data.tenantId == getTenantId()));
      allow create: if isAuthenticated() && getUid() == userId; // A user can create their own profile upon first login/registration
      allow update, delete: if isAuthenticated() && (getUid() == userId || (isAdmin() && resource.data.tenantId == getTenantId()));
    }

    match /empresas/{empresaId} {
      allow read, write: if false;
      
      match /financeiro_mensal/{monthId} {
        allow read: if isAuthenticated() && getTenantId() == empresaId;
        allow write: if false; // somente backend (Admin SDK)
      }
      
      match /auditEvents/{eventId} {
        allow read: if isAuthenticated() && getTenantId() == empresaId && isAdmin();
        allow write: if false; // somente backend (Admin SDK)
      }
      
      match /_aggregate_events/{docId} {
        allow read, write: if false; // somente backend (Admin SDK)
      }
      
      match /lancamentosFinanceiros/{lancamentoId} {
        allow read: if isAuthenticated() && getTenantId() == empresaId;
        
        allow create: if isAuthenticated()
          && getTenantId() == empresaId
          && request.resource.data.empresaId == empresaId
          && request.resource.data.status == 'PENDENTE';
        
        allow update: if isAuthenticated()
          && getTenantId() == empresaId
          && resource.data.empresaId == empresaId
          && request.resource.data.empresaId == empresaId
          && resource.data.status == 'PENDENTE'
          && request.resource.data.status == 'PENDENTE' // cliente não confirma pagamento
          && request.resource.data.valor == resource.data.valor
          && request.resource.data.tipo == resource.data.tipo
          && request.resource.data.dataCompetencia == resource.data.dataCompetencia;
        
        allow delete: if false;
      }
      
      match /os/{osId} {
        allow read, write: if isAuthenticated() && getTenantId() == empresaId;
      }

      match /clients/{clientId} {
        allow read, write: if isAuthenticated() && getTenantId() == empresaId;
      }

      match /catalogItems/{itemId} {
        allow read, write: if isAuthenticated() && getTenantId() == empresaId;
      }

      match /serviceOrders/{orderId} {
        allow read, write: if isAuthenticated() && getTenantId() == empresaId;
      }

      match /transactions/{transactionId} {
        allow read, write: if isAuthenticated() && getTenantId() == empresaId;
      }

      match /lancamentos/{lancamentoId} {
        allow read, write: if isAuthenticated() && getTenantId() == empresaId;
      }
    }

  }
}
